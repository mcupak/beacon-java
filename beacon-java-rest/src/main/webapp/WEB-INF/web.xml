<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <distributable/>

    <context-param>
        <param-name>resteasy.scan</param-name>
        <param-value>true</param-value>
    </context-param>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <!-- Keycloak security is disabled by default. -->
    <!-- To enable, change this parameter to true. -->
    <context-param>
        <param-name>keycloak.security.enabled</param-name>
        <param-value>false</param-value>
    </context-param>

    <filter>
        <filter-name>Keycloak Filter</filter-name>
        <filter-class>com.dnastack.beacon.rest.sys.security.ConfigurableKeycloakOIDCFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Keycloak Filter</filter-name>
        <url-pattern>/keycloak/*</url-pattern>
        <url-pattern>/query/*</url-pattern>
    </filter-mapping>
</web-app>
